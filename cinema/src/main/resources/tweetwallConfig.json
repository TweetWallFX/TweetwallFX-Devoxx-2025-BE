{
    "tweetwall": {
        "query": "#devoxx",
        "title": "The JavaFX Cinema Tweetwall for Devoxx Belgium 2025!",
        "stylesheetResource": "tweetwall.css"
    },

    "configuration": {
        "additionalConfigurationURLs": [
            "https://raw.githubusercontent.com/mklaehn/TweetwallFX-Devoxx-2025-BE/refs/heads/conferenceConfig/configs/base/src/main/resources/tweetwallConfig_conference.json",
            "https://raw.githubusercontent.com/mklaehn/TweetwallFX-Devoxx-2025-BE/refs/heads/conferenceConfig/configs/base/src/main/resources/tweetwallConfig_filters.json",
            "https://raw.githubusercontent.com/mklaehn/TweetwallFX-Devoxx-2025-BE/refs/heads/conferenceConfig/configs/base/src/main/resources/tweetwallConfig_cinema.json"
        ]
    },

    "stepEngine": {
        "steps": [
            {
                "stepClassName": "org.tweetwallfx.devoxx.base.stepengine.BackgroundSwitcher",
                "config": {
                    "backgrounds": [
                        "backgrounds/DevoxxBelgium2025CinemaBackdrop.png",
                        "backgrounds/DevoxxBelgium2025CinemaBackdrop-2.png",
                        "backgrounds/DevoxxBelgium2025CinemaBackdrop-3.png",
                        "backgrounds/DevoxxBelgium2025CinemaBackdrop-4.png",
                        "backgrounds/DevoxxBelgium2025CinemaBackdrop-5.png"
                    ]
                }
            },
            {
                "stepClassName": "org.tweetwallfx.conference.stepengine.steps.ShowSchedule",
                "config": {
                    "layoutX": 35,
                    "layoutY": 210,
                    "width": 1860,
                    "sessionHeight": 190,
                    "showAvatar": true,
                    "avatarArcSize": 16,
                    "avatarSize": 60,
                    "avatarSpacing": 4,
                    "showFavourite": true,
                    "stepDuration": 500,
                    "circularAvatar": true,
                    "compressedAvatars": true,
                    "compressedAvatarsLimit": 4,
                    "showTags": true,
                    "columns": 4,
                    "autoSeparateRoomTypes": true,
                    "showCompanyName": true
                }
            },
            {
                "stepClassName": "org.tweetwallfx.stepengine.steps.PauseStep",
                "config": {
                    "amount": 15,
                    "unit": "SECONDS"
                }
            },
            {
                "stepClassName": "org.tweetwallfx.controls.steps.NodeFadeOutStep",
                "config": {
                    "nodeSelector": "#scheduleNode"
                }
            },
            {
                "stepClassName": "org.tweetwallfx.conference.stepengine.steps.ShowTopRated",
                "config": {
                    "layoutX": 35,
                    "layoutY": 210,
                    "width": 800,
                    "talkHeight": 125,
                    "talkVGap": 5,
                    "topVotedType": "TODAY",
                    "stepDuration": 500,
                    "skipTokenValue": "TopRatedToday"
                }
            },
            {
                "stepClassName": "org.tweetwallfx.conference.impl.FlickrMosaicStep",
                "config": {
                    "layoutX": 900,
                    "layoutY": 210,
                    "width": 950,
                    "height": 655,
                    "numberOfImagesToChooseFrom": 250,
                    "columns": 5,
                    "rows": 4,
                    "skipWhenSkipped": "TopRatedToday"
                }
            },
            {
                "stepClassName": "org.tweetwallfx.controls.steps.NodeFadeOutStep",
                "config": {
                    "nodeSelector": "#topRatedNode"
                }
            },
            {
                "stepClassName": "org.tweetwallfx.conference.impl.FlickrMosaicStep",
                "config": {
                    "layoutX": 35,
                    "layoutY": 210,
                    "width": 1860,
                    "height": 655,
                    "numberOfImagesToChooseFrom": 250,
                    "columns": 9,
                    "rows": 5
                }
            },
            {
                "stepClassName": "org.tweetwallfx.conference.stepengine.steps.ShowSchedule",
                "config": {
                    "layoutX": 35,
                    "layoutY": 210,
                    "width": 1860,
                    "sessionHeight": 190,
                    "showAvatar": true,
                    "avatarArcSize": 16,
                    "avatarSize": 60,
                    "avatarSpacing": 4,
                    "showFavourite": true,
                    "stepDuration": 500,
                    "circularAvatar": true,
                    "compressedAvatars": true,
                    "compressedAvatarsLimit": 4,
                    "showTags": true,
                    "columns": 4,
                    "autoSeparateRoomTypes": true,
                    "showCompanyName": true
                }
            },
            {
                "stepClassName": "org.tweetwallfx.stepengine.steps.PauseStep",
                "config": {
                    "amount": 15,
                    "unit": "SECONDS"
                }
            },
            {
                "stepClassName": "org.tweetwallfx.controls.steps.NodeFadeOutStep",
                "config": {
                    "nodeSelector": "#scheduleNode"
                }
            },
            {
                "stepClassName": "org.tweetwallfx.conference.stepengine.steps.ShowTopRated",
                "config": {
                    "layoutX": 35,
                    "layoutY": 210,
                    "width": 800,
                    "talkHeight": 125,
                    "talkVGap": 5,
                    "topVotedType": "WEEK",
                    "stepDuration": 500,
                    "skipTokenValue": "TopRatedWeek"
                }
            },
            {
                "stepClassName": "org.tweetwallfx.conference.impl.FlickrMosaicStep",
                "config": {
                    "layoutX": 900,
                    "layoutY": 210,
                    "width": 950,
                    "height": 655,
                    "numberOfImagesToChooseFrom": 250,
                    "columns": 5,
                    "rows": 4,
                    "skipWhenSkipped": "TopRatedWeek"
                }
            },
            {
                "stepClassName": "org.tweetwallfx.controls.steps.NodeFadeOutStep",
                "config": {
                    "nodeSelector": "#topRatedNode"
                }
            }
        ]
    }
}
