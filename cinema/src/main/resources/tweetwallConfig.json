{
    "tweetwall": {
        "query": "<YOUR_QUERY>",
        "title": "The JavaFX Cinema Tweetwall for Devoxx Belgium 2025!",
        "stylesheetResource": "tweetwall.css"
    },

    "stepEngine": {
        "steps": [
            {
                "stepClassName": "org.tweetwallfx.devoxx.base.stepengine.BackgroundSwitcher",
                "config": {
                    "backgrounds": [
                        "backgrounds/Ultrarealistic_intricated_Cinematographic_view.png",
                        "backgrounds/Ultrarealistic_intricated_General_cinema_sho.png",
                        "backgrounds/Ultrarealistic_intricated_General_cinema_sho_2.png",
                        "backgrounds/View_from_ground_level_view_from_a_futuristic.png"
                    ]
                }
            },
            {
                "stepClassName": "org.tweetwallfx.conference.stepengine.steps.ShowSchedule",
                "config": {
                    "layoutX": 35,
                    "layoutY": 165,
                    "width": 1860,
                    "sessionHeight": 200,
                    "showAvatar": true,
                    "avatarArcSize": 16,
                    "avatarSize": 60,
                    "avatarSpacing": 4,
                    "showFavourite": true,
                    "stepDuration": 500,
                    "circularAvatar": true,
                    "compressedAvatars": true,
                    "compressedAvatarsLimit": 4,
                    "showTags": true,
                    "columns": 4,
                    "autoSeparateRoomTypes": true,
                    "showCompanyName": true
                }
            },
            {
                "stepClassName": "org.tweetwallfx.conference.impl.FlickrMosaicStep",
                "config": {
                    "layoutX": 950,
                    "layoutY": 200,
                    "width": 900,
                    "height": 700,
                    "columns": 3,
                    "rows": 3
                }
            },
            {
                "stepClassName": "org.tweetwallfx.stepengine.steps.PauseStep",
                "config": {
                    "amount": 15,
                    "unit": "SECONDS"
                }
            },
            {
                "stepClassName": "org.tweetwallfx.controls.steps.NodeFadeOutStep",
                "config": {
                    "nodeSelector": "#scheduleNode"
                }
            },
            {
                "stepClassName": "org.tweetwallfx.conference.stepengine.steps.ShowTopRated",
                "config": {
                    "layoutX": 35,
                    "layoutY": 165,
                    "width": 800,
                    "talkHeight": 125,
                    "talkVGap": 5,
                    "topVotedType": "TODAY",
                    "stepDuration": 500,
                    "skipTokenValue": "TopRatedToday"
                }
            },
            {
                "stepClassName": "org.tweetwallfx.conference.impl.FlickrMosaicStep",
                "config": {
                    "layoutX": 950,
                    "layoutY": 200,
                    "width": 900,
                    "height": 700,
                    "columns": 3,
                    "rows": 3,
                    "skipWhenSkipped": "TopRatedToday"
                }
            },
            {
                "stepClassName": "org.tweetwallfx.controls.steps.NodeFadeOutStep",
                "config": {
                    "nodeSelector": "#topRatedeNode"
                }
            },
            {
                "stepClassName": "org.tweetwallfx.conference.stepengine.steps.ShowSchedule",
                "config": {
                    "layoutX": 35,
                    "layoutY": 165,
                    "width": 1860,
                    "sessionHeight": 200,
                    "showAvatar": true,
