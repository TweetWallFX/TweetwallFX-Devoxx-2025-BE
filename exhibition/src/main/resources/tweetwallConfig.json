{
    "tweetwall": {
        "query": "<YOUR_QUERY>",
        "title": "The JavaFX Exhibition Tweetwall for Devoxx Belgium 2025!",
        "stylesheetResource": "tweetwall.css"
    },

    "stepEngine": {
        "steps": [
            {
                "stepClassName": "org.tweetwallfx.devoxx.base.stepengine.BackgroundSwitcher",
                "config": {
                    "backgrounds": [
                        "backgrounds/DevoxxBelgium2025CinemaBackdrop-no-logos.png",
                        "backgrounds/DevoxxBelgium2025CinemaBackdrop-2-no-logos.png",
                        "backgrounds/DevoxxBelgium2025CinemaBackdrop-3-no-logos.png",
                        "backgrounds/DevoxxBelgium2025CinemaBackdrop-4-no-logos.png",
                        "backgrounds/DevoxxBelgium2025CinemaBackdrop-5-no-logos.png"
                    ]
                }
            },
            {
                "stepClassName": "org.tweetwallfx.conference.stepengine.steps.ShowSchedule",
                "config": {
                    "layoutX": 103,
                    "layoutY": 200,
                    "width": 800,
                    "sessionHeight": 150,
                    "showAvatar": true,
                    "avatarArcSize": 16,
                    "avatarSize": 50,
                    "avatarSpacing": 4,
                    "showFavourite": true,
                    "stepDuration": 500
                }
            },
            {
                "stepClassName": "org.tweetwallfx.conference.impl.FlickrMosaicStep",
                "config": {
                    "layoutX": 950,
                    "layoutY": 200,
                    "width": 900,
                    "height": 700,
                    "columns": 3,
                    "rows": 3
                }
            },
            {
                "stepClassName": "org.tweetwallfx.controls.steps.NodeFadeOutStep",
                "config": {
                    "nodeSelector": "#scheduleNode"
                }
            },
            {
                "stepClassName": "org.tweetwallfx.conference.stepengine.steps.ShowTopRated",
                "config": {
                    "layoutX": 103,
                    "layoutY": 200,
                    "width": 800,
                    "talkHeight": 125,
                    "talkVGap": 5,
                    "topVotedType": "TODAY",
                    "stepDuration": 500,
                    "skipTokenValue": "TopRatedToday"
                }
            },
            {
                "stepClassName": "org.tweetwallfx.conference.impl.FlickrMosaicStep",
                "config": {
                    "layoutX": 950,
                    "layoutY": 200,
                    "width": 900,
                    "height": 700,
                    "columns": 3,
                    "rows": 3,
                    "skipWhenSkipped": "TopRatedToday"
                }
            },
            {
                "stepClassName": "org.tweetwallfx.stepengine.steps.PauseStep",
                "config": {
                    "amount": "15",
                    "unit": "SECONDS",
                    "skipWhenSkipped": "DevoxxPhotoSharingMosaic"
                }
            },
            {
                "stepClassName": "org.tweetwallfx.controls.steps.NodeFadeOutStep",
                "config": {
                    "nodeSelector": "#topRatedeNode"
                }
            },
            {
                "stepClassName": "org.tweetwallfx.conference.impl.FlickrMosaicStep",
                "config": {
                    "layoutX": 103,
                    "layoutY": 200,
                    "width": 1600,
                    "height": 700,
                    "columns": 5,
                    "rows": 3
                }
            },
            {
                "stepClassName": "org.tweetwallfx.conference.stepengine.steps.ShowSchedule",
                "config": {
                    "layoutX": 103,
                    "layoutY": 200,
                    "width": 800,
                    "sessionHeight": 150,
                    "showAvatar": true,
                    "avatarArcSize": 16,
                    "avatarSize": 50,
                    "avatarSpacing": 4,
                    "showFavourite": true,
                    "stepDuration": 500
                }
            },
            {
                "stepClassName": "org.tweetwallfx.conference.impl.FlickrMosaicStep",
                "config": {
                    "layoutX": 950,
                    "layoutY": 200,
                    "width": 900,
                    "height": 700,
                    "columns": 3,
                    "rows": 3
                }
            },
            {
                "stepClassName": "org.tweetwallfx.controls.steps.NodeFadeOutStep",
                "config": {
                    "nodeSelector": "#scheduleNode"
                }
            },
            {
                "stepClassName": "org.tweetwallfx.conference.stepengine.steps.ShowTopRated",
                "config": {
                    "layoutX": 103,
                    "layoutY": 200,
                    "width": 800,
                    "talkHeight": 125,
                    "talkVGap": 5,
                    "topVotedType": "WEEK",
                    "stepDuration": 500,
                    "skipTokenValue": "TopRatedWeek"
                }
            },
            {
                "stepClassName": "org.tweetwallfx.conference.impl.FlickrMosaicStep",
                "config": {
                    "layoutX": 950,
                    "layoutY": 200,
                    "width": 900,
                    "height": 700,
                    "columns": 3,
                    "rows": 3,
                    "skipWhenSkipped": "TopRatedWeek"
                }
            },
            {
                "stepClassName": "org.tweetwallfx.controls.steps.NodeFadeOutStep",
                "config": {
                    "nodeSelector": "#topRatedeNode"
                }
            }
        ]
    }
}
